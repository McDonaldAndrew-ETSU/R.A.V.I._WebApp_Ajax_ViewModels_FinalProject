@model IEnumerable<MachineLearning_WebApp_Ajax_ViewModels_FinalProject.Models.ViewModels.UserListVM>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRoles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfRoles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleNames)
                </td>
                <td>
                    <a asp-action="AssignRole" asp-controller="User" asp-route-id="@item.Username">Assign Role</a> |
                    <a asp-action="RemoveRole" asp-controller="User" asp-route-id="@item.Username">Remove Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
