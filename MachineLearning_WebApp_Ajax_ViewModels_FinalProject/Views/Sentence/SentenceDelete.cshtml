@model SentenceSimpleVM

@{
    ViewData["Title"] = "Sentence Delete";
}

<h1 id="sentenceHeading">@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Spelling
        </dt>
        <dd class = "col-sm-10" id="sentenceSpelling">
            
        </dd>
    </dl>
    
    <form asp-action="SentenceDelete" id="formSentenceDelete">
        <input id="id" name="id" value=" " type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="SentenceIndex">Back to Sentence List</a>
    </form>
</div>

@section Scripts {
    <script src="~/js/sentence/sentenceDelete.js" type="module" defer></script>
}
