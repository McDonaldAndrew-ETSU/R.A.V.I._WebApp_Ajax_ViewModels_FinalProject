@model CommandSimpleVM

@{
    ViewData["Title"] = "Command Delete";
}

<h1 id="commandHeading">@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Action
        </dt>
        <dd class = "col-sm-10" id="commandAction">
            
        </dd>
    </dl>
    
    <form asp-action="CommandDelete" id="formCommandDelete">
        <input id="id" name="id" value=" " type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="CommandIndex">Back to Command List</a>
    </form>
</div>

@section Scripts {
    <script src="~/js/command/commandDelete.js" type="module" defer></script>
}
