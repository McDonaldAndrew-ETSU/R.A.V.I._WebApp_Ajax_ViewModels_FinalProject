@model CommandSentenceSimpleVM

@{
    ViewData["Title"] = "CommandSentence Delete";
}

<h1 id="commandSentenceHeading">@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10" id="csId">

        </dd>
    </dl>

    <form asp-action="CommandSentenceDelete" id="formCommandSentenceDelete">
        <input id="id" name="id" value=" " type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="CommandSentenceDetailedIndex">Back to CommandSentence List</a>
    </form>
</div>

@section Scripts {
    <script src="~/js/commandSentence/commandSentenceDelete.js" type="module" defer></script>
}
