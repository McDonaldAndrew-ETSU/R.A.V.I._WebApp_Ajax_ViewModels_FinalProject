@model CommandSentenceDetailedVM

@{
    ViewData["Title"] = "CommandSentence Create";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CommandSentenceCreate" id="formCommandSentenceCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CommandAction" class="control-label"></label>
                <select id="commandSelectBox" asp-for="CommandAction" class="form-select">
                    <option hidden disabled selected>Select a Command</option>
                </select>
                <span asp-validation-for="CommandAction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SentenceSpelling" class="control-label"></label>
                <select id="sentenceSelectBox" asp-for="SentenceSpelling" class="form-select">
                    <option hidden disabled selected>Select a Sentence</option>
                </select>
                <span asp-validation-for="SentenceSpelling" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                <div id="alertArea" class="alert alert-danger" role="alert" style="display:none">
                    <span id="messageArea"></span>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CommandSentenceDetailedIndex">Back to Detailed CommandSentence List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/commandSentence/commandSentenceCreate.js" type="module" defer></script>}
